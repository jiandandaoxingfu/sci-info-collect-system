{
  "name": "科研成果统计",
  "manifest_version": 2,
  "version": "1.0.0",
  "author": "JMx",
  "homepage_url": "http://github.com/jiandandaoxingfu/chrome-extension",
  "icons": {
    "16": "img/icon.png",
    "32": "img/icon.png",
    "48": "img/icon.png",
    "64": "img/icon.png"
  },

  "description": "用于科研成果统计",
  "permissions": [
    "tabs",
    "https://vpn2.zzu.edu.cn/,DanaInfo=apps.webofknowledge.com*"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon.png",
      "32": "img/icon.png",
      "48": "img/icon.png",
      "64": "img/icon.png"
    }
  },

  "background": {
    "president": false
  },

  "content_scripts": [{
    "matches": ["https://vpn2.zzu.edu.cn/,DanaInfo=apps.webofknowledge.com*"],
    "css": [
        "content-script/css/main.css",
        "content-script/css/source-sans-pro.min.css",
        "content-script/css/WoKcommon.css",
        "content-script/css/WoKcomponents.css",
        "content-script/css/WoKsummary.css"],
    "js": [
        "content-script/lib/axios.min.js",
        "content-script/js/message.js",
        "content-script/js/spider.js"],
    "run_at": "document_start"
  }]
}