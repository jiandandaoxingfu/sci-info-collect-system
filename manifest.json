{
  "name": "科研成果统计",
  "manifest_version": 2,
  "version": "1.0.0",
  "author": "JMx",
  "homepage_url": "http://github.com/jiandandaoxingfu/sci-info-collect-system",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png"
  },

  "description": "用于科研成果统计",
  "permissions": [
    "tabs",
    "https://vpn2.zzu.edu.cn/,DanaInfo=apps.webofknowledge.com*",
    "http://www.fenqubiao.com/*",
    "https://api.github.com/repos/jiandandaoxingfu/sci-info-collect-system/releases"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "64": "icon.png"
    }
  },

  "background": {
    "president": false
  },

  "content_scripts": [{
    // webofscience主窗口，负责打印。
    "matches": ["https://vpn2.zzu.edu.cn/,DanaInfo=apps.webofknowledge.com+UA_GeneralSearch_input.do*"],
    "css": [
        "content-script/css/main.css",
        "content-script/css/source-sans-pro.min.css",
        "content-script/css/WoKcommon.css",
        "content-script/css/WoKcomponents.css",
        "content-script/css/WoKsummary.css",
        "content-script/css/fenqubiao.css",
        "content-script/css/bootstrap.min.css"],
    "js": [
        "content-script/lib/axios.min.js",
        "content-script/js/message.js",
        "content-script/js/spider-main.js"],
    "run_at": "document_start"
    }, 
    // 引用页面
    {
    "matches": ["https://vpn2.zzu.edu.cn/,DanaInfo=apps.webofknowledge.com+CitingArticles.do*"],
    "js": [
        "content-script/js/message.js",
        "content-script/js/spider-cite.js"],
    "run_at": "document_start"
    },
    // 精炼页面
     { 
    "matches": ["https://vpn2.zzu.edu.cn/,DanaInfo=apps.webofknowledge.com+Search.do*"], 
    "js": [
        "content-script/js/message.js",
        "content-script/js/spider-cite-refine.js"],
    "run_at": "document_start"
    }, 
    // 期刊分区详情页面
    {
    "matches": ["http://www.fenqubiao.com/"],
    "js": [
        "content-script/js/message.js",
        "content-script/js/spider-fenqubiao.js"],
    "run_at": "document_start"
  }]
}