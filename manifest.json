{
  "name": "科研成果统计",
  "manifest_version": 2,
  "version": "2.4.0",
  "author": "JMx",
  "homepage_url": "http://github.com/jiandandaoxingfu/sci-info-collect-system",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png"
  },

  "description": "用于科研成果统计",
  "permissions": [
    "tabs",
    "https://apps.webofknowledge.com/*",
    "http://www.fenqubiao.com/*",
    "https://api.github.com/repos/jiandandaoxingfu/sci-info-collect-system/releases",
    "https://xueshu.baidu.com/*",
    "https://www.researchgate.net/*",
    "https://www.sciencedirect.com/*"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "64": "icon.png"
    }
  },

  "background": {
    "president": false
  },

  "content_scripts": [
    {
    "matches": ["https://www.webofscience.com/wos/woscc/full-record/*",
                "https://www.webofscience.com/wos/woscc/summary/*"],
    "js": [
        "content-script/js/highlight.js"],
    "run_at": "document_start"
    }]
}